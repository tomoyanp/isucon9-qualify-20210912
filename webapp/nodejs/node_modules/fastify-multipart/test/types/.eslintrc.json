{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "standard"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "env": { "node": true },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "@typescript-eslint/indent": ["error", 2],
    "semi": ["error", "never"]
  }
}